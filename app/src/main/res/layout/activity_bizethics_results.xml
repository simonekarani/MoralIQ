<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bizethicsResultMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Congratulations"
        android:textStyle="normal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#c0c0c0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/bizPrevBtn"
            android:layout_width="400px"
            android:layout_height="140px"
            android:layout_marginTop="2dp"
            android:background="#A9A9A9"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:text="&#60;&#160;Prev"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/bizNextButton"
            android:layout_width="400px"
            android:layout_height="140px"
            android:layout_marginTop="2dp"
            android:background="#A9A9A9"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:text="Next&#160;&#62;"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bizQText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question:"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/bizName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Marshmallow"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/bizAnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Your Selection:"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/qBizAnswer1"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:text="RadioButton" />

            <Button
                android:id="@+id/qBizAnswer2"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:text="RadioButton" />

            <Button
                android:id="@+id/qBizAnswer3"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:text="RadioButton" />

            <Button
                android:id="@+id/qBizAnswer4"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:text="RadioButton" />

            <TextView
                android:id="@+id/bizCorrectText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Correct Answer:"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/bizCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Android 6.0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/bizAnalysisText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Analysis:"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/bizAnalysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:text="Android 6.0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
