<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drivingQText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Question:"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/qName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:text="What should the self driving car do on a sudden brake failure?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/drivingOptAnswer1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:button="@null"
                android:drawableTop="@drawable/driving1a"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/drivingOptAnswer2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:drawableTop="@drawable/driving1b"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="RadioButton" />

        </RadioGroup>

        <TextView
            android:id="@+id/driveAnalysisText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Analysis:"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/driveAnalysis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:text="Android 6.0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

    </LinearLayout>

</RelativeLayout>